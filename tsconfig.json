{
    "compilerOptions": {
        /* Language and Environment */
        "target": "es2016",

        /* Modules */
        "module": "commonjs",
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Completeness */
        "skipLibCheck": true,

        /* Module Resolution */
        "outDir": "dist",

        /* Source Maps */
        "baseUrl": "./",
        "paths": {
            "modules/*": ["modules/*"]
        },
        "typeRoots": ["modules/index.d.ts", "node_modules/@types"]
    },
    "include": ["modules/**/*"]
}
